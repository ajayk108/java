
public class passByReference {
	
	static void disparry(int[] arr)
	{
		System.out.println("inside disparry fun");
		arr[0]=0; arr[1]=0; arr[2]=0;
		for(int i=0; i<3; i++)
			System.out.print(arr[i]+" ");
	}
	public static void main(String[] args) {
		
		int arr[] = {2, 3, 4};
		System.out.println("before the fun call");
		for(int i=0; i<3; i++)
			System.out.print(arr[i]+" ");
		
		disparry(arr);
		
		System.out.println("\nAfter the fun call");
		for(int i=0; i<3; i++)
			System.out.print(arr[i]+" ");
		
	}

}
